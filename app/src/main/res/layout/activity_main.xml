<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/teal_700"
    tools:context=".MainActivity">


    <include
        layout="@layout/view_display"
        android:id="@+id/drawView"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <LinearLayout
        android:id="@+id/motionLayer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal" />

    <RelativeLayout
        android:id="@+id/tool_design"
        android:layout_width="match_parent"
        android:layout_height="85dp"
        android:layout_gravity="bottom"
        android:background="@drawable/tools_design">

        <Button
            android:id="@+id/pencil"
            android:layout_width="50dp"
            android:layout_height="49dp"
            android:layout_centerVertical="true"
            android:background="@drawable/pencil"
            android:backgroundTint="#ff0000"
            android:onClick="pencil"
            android:rotation="-45" />

        <Button
            android:id="@+id/eraser"
            android:layout_width="50dp"
            android:layout_height="49dp"
            android:layout_centerVertical="true"
            android:layout_margin="2dp"
            android:layout_toRightOf="@+id/pencil"
            android:background="@drawable/eraser"
            android:onClick="eraser" />

        <Button
            android:id="@+id/color"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/eraser"
            android:background="@drawable/colorpicker"
            android:onClick="openColorPicker" />

        <Button
            android:id="@+id/zoomImg"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerVertical="true"
            android:layout_margin="8dp"
            android:layout_toRightOf="@+id/color"
            android:background="@drawable/zoom"
            android:onClick="zoomImg" />

        <Button
            android:id="@+id/newPaint"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerVertical="true"
            android:layout_margin="8dp"
            android:onClick="newPaint"
            android:background="@drawable/newpaper"
            android:layout_toRightOf="@+id/zoomImg"/>

        <Button
            android:id="@+id/save"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerVertical="true"
            android:layout_margin="8dp"
            android:layout_toRightOf="@+id/newPaint"
            android:background="@drawable/save_img" />

        <Button
            android:id="@+id/dowloadImg"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerVertical="true"
            android:layout_margin="8dp"
            android:layout_toRightOf="@+id/save"
            android:background="@drawable/dowload"
            android:onClick="dowloadPaint" />
    </RelativeLayout>
</FrameLayout>